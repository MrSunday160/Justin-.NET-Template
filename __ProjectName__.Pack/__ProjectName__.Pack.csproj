<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net8.0</TargetFramework>
	  <PackageId>JustinThejasukmana.CleanApiTemplate</PackageId>
	  <Version>1.0.8</Version>
	  <Authors>Justin Thejasukmana</Authors>
	  <PackageType>Template</PackageType>
	  <Description>Multi-project template using Justin.EntityFramework Library</Description>
	  <IncludeBuildOutput>false</IncludeBuildOutput>
	  <!-- <IsPackable>false</IsPackable> -->
  </PropertyGroup>

	<ItemGroup>
		<!-- Include everything inside the template folder -->
		<None Include="..\**\*.*"
			  Exclude="..\**\bin\**;
					   ..\**\obj\**;
					   ..\**\.git;
					   ..\.vs\**;
					   ..\**\.vs\**;
					   ..\**\.git\**;
					   ..\**\.github\**;
					   ..\**\*.user;
					   ..\**\*.lock.json;
					   ..\__ProjectName__.Pack\**;"
			  Pack="true" PackagePath="content" />
		
	</ItemGroup>

</Project>
